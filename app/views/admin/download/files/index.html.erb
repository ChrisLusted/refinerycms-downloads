<%= render :partial => '/admin/download/submenu' %>    
<div id='records'>
  <% if searching? %>
    <h2><%= t('shared.admin.search.results_for', :query => params[:search]) %></h2>
    <% if @download_files.any? %>
    <ul>
      <%= render :partial => "file",
                 :collection => @download_files %>
    </ul>
    <% else %>
      <p><%= t('shared.admin.search.no_results') %></p>
    <% end %>
  <% else %>
    <% if @download_files.any?  %>
      <%= will_paginate @download_files %>

      <%= render :partial => "sortable_list" %>

      <%= will_paginate @download_files %>
    <% else %>
      <p>
        <strong>
          <%= t('.no_items_yet', :create => t('admin.blog.submenu.posts.new')) %>
        </strong>
      </p>
    <% end %>
  <% end %>
</div>